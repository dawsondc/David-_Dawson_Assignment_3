@using David__Dawson_Assignment_3.Models.Entities
@model IEnumerable<David__Dawson_Assignment_3.Models.Entities.Game>

@{
    var person = (Person?)ViewData["Person"];
    ViewData["Title"] = $"Assign game for {person!.FirstName} {person!.LastName}";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.gameID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.gameID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <a asp-action="Create" asp-controller="PersonGame"
                            asp-route-id="@person!.personID" 
                            asp-route-gameId="@item.gameID">Assign</a>
            </td>
        </tr>
}
    </tbody>
</table>
