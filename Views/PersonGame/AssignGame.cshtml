@model David__Dawson_Assignment_3.Models.Entities.PersonGame

@{
    var person = Model!.Person;
    var game = Model!.Game;
    ViewData["Title"] = $"Assigning rating to {game!.Name}";
}

<h1>Assign Game</h1>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignGame">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="personGameID" value="@Model!.personGameID" />
             <input type="hidden" name="personID" value="@Model!.personID" />
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign Rating" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
   <a asp-action="Details" asp-controller="Person" 
        asp-route-id="@Model!.personID">Back to Person Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
